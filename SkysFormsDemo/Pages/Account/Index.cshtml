@page
@using Microsoft.EntityFrameworkCore.Metadata.Conventions
@model IndexModel
@{
    ViewData["Title"] = "Konton";
}



<div class="card">
    <div class="card-header">
        <h1>Alla konton</h1>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Nummer</th>
                <th>Saldo</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var person in Model.Konton)
            {
                <tr>
                    <td>@person.AccountNo</td>
                    <td>@person.Balance</td>
                    <td>
                        <a asp-page="Withdraw" asp-route-accountId="@person.Id">
                            Withdraw
                            <i class='bx bx-money-withdraw'></i>
                        </a>
                    </td>
                    <td>
                        <a asp-page="Deposit" asp-route-accountId="@person.Id">
                            <i class='bx bx-money' ></i>
                        </a>

                    </td>
                </tr>
            }
        </table>
        

    </div>
</div>