@page
@model SkysFormsDemo.Pages.Account.DepositModel
@{
}


<form method="post">
    
    <div class="form-group">
        <label asp-for="Amount">Belopp</label>
        <input class="form-control" asp-for="Amount" />
        <span class="field-validation-error" asp-validation-for="Amount"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateWhen">Datum för dragning</label>
        <input class="form-control" asp-for="DateWhen" />
        <span class="field-validation-error" asp-validation-for="DateWhen"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment">Kommentar</label>
        <input class="form-control" asp-for="Comment" />
        <span class="field-validation-error" asp-validation-for="Comment"></span>
    </div>
    <button type="submit" class="btn">Deposit</button>
</form>